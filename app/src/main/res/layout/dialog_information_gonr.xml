<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="5dp"
     android:background="@drawable/background_base_fare" >
        
        
        
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
         
               android:textColor="@color/text_color"
            android:text="All the information entered will be lost.\nAre you sure you want to continue?"/>

        <RelativeLayout
       
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
          android:layout_below="@+id/text">

            <Button
                android:id="@+id/dialog_ok_btn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/button_text_color"
                android:background="@drawable/button_oval_shape"
               android:text="YES"/>

            <Button
                android:id="@+id/dialog_cancel_btn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/dialog_ok_btn"
                    android:padding="10dp"
                     android:textColor="@color/button_text_color"
                android:background="@drawable/button_oval_shape"
                android:text="NO" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>