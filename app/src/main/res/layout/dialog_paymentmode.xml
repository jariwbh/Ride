<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:background="@drawable/background_base_fare" >



        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"

            android:textColor="@color/text_color"
            android:text="All the information entered will be lost.\nAre you sure you want to continue?"/>

        <LinearLayout

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:weightSum="20"
            android:layout_below="@+id/text">

            <Button
                android:id="@+id/dialog_ok_btn"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/button_text_color"
                android:background="@drawable/button_oval_shape"
                android:text="Cash"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/dialog_cancel_btn"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dialog_ok_btn"
                android:padding="10dp"
                android:textColor="@color/button_text_color"
                android:background="@drawable/button_oval_shape"
                android:text="Credit Card"
                android:layout_margin="10dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>